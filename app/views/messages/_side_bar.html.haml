.side-bar
  .side-bar__user-name
    .side-bar__user-name__top-items
      %p.side-bar__user-name__top-items__name
        = current_user.name
      %ul.side-bar__user-name__top-items__icons
        %li.side-bar__user-name__top-items__icons__icon-edit
          = link_to new_group_path do
            = icon('fas','edit')
        %li.side-bar__user-name__top-items__icons__icon-cog
          = link_to edit_user_path(current_user) do
            = icon('fas','cog')

  .side-bar__groups
    - current_user.groups.each do |group|
      .side-bar__groups__group
        = link_to group_messages_path(group) do
          .side-bar__groups__group__name
            = group.name
          .side-bar__groups__group__message
            = group.show_last_message