.side_bar
  .side_bar__header
    .side_bar__header__box
      .side_bar__header__box_user
        = current_user.name
      .side_bar__header__box_icon
        = link_to new_group_path, class: "side_bar__header__box_icon__edit_groups" do
          %i.far.fa-edit
        = link_to edit_user_path(current_user.id), class: "side_bar__header__box_icon__edit_user" do
          %i.fa.fa-cog
  .side_bar__groups
    - current_user.groups.each do |group|
      .side_bar__groups__group
        = link_to group_messages_path(group) do
          .side_bar__groups__group_name
            = group.name
          .side_bar__groups__last_message
            = group.show_last_message