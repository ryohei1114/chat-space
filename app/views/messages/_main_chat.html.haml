.chat_main
  .chat_main__header
    .chat_main__header__group_box
      .chat_main__header__group_box__group_name
        = @group.name
      .chat_main__header__group_box__member_name
        Members:
        - @group.users.each do |user|
          = user.name
    = link_to edit_group_path(@group), class: "chat_main__header__edit_btn__group_edit" do
      .chat_main__header__edit_btn
        Edit

  .chat_main__messages
    = render @messages

  .chat_main__form
    .new_message
      .input-box
        = form_for [@group, @message] do |f|
          = f.text_field :content, class: 'input-box__text', placeholder: 'type a message'
          = f.label :image, class: 'input-box__img' do
            = icon('fas', 'image')
            = f.file_field :image, class: 'input-box__img__file'
          = f.submit 'Send', class: 'submit-btn'
